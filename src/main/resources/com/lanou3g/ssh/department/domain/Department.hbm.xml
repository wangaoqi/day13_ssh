<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.lanou3g.ssh.department.domain">
    <class name="com.lanou3g.department.domain.Department" table="T_DEPT">
        <id name="depId" column="DEPT_ID">
            <generator class="uuid"/>
        </id>
        <property name="depName"/>
        <set name="postSet"
             table="T_POST"
             cascade="save-update"
             inverse="true">
            <key column="DEPT_ID"/>
            <one-to-many class="com.lanou3g.post.domain.Post"/>
        </set>

    </class>
</hibernate-mapping>